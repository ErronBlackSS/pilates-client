{
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "prefer-const": "error",
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    "react/jsx-filename-extension": [ "warn", {"extensions": [".tsx"]} ]
  }
}